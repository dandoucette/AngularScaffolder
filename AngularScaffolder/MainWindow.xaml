<Window x:Class="AngularScaffolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngularScaffolder"
        mc:Ignorable="d"
        Title="Model Scaffolding" Height="450" Width="1000">
    <DockPanel LastChildFill="True">
        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBar>
                <TextBox x:Name="SourceClassTextBox" Width="400"></TextBox>
                <Button x:Name="BrowseButton" Width="50" Margin="10,0,30,0" Click="BrowseButton_Click">Browse</Button>
                <CheckBox x:Name="InterfaceCheckBox" IsChecked="True">Interface</CheckBox>
                <CheckBox x:Name="FormCheckBox" IsChecked="True" Margin="10,0,10,0">Form Controls</CheckBox>
                <CheckBox x:Name="ColumnsCheckBox" IsChecked="True">Table Columns</CheckBox>
                <CheckBox x:Name="ServiceCheckBox" IsChecked="True" Margin="10,0,10,0">Service</CheckBox>
                <Button x:Name="ProcessButton" Margin="10,0,0,0" Click="ProcessButton_Click">Go</Button>
            </ToolBar>
        </ToolBarPanel>
        <TextBox x:Name="OutputTextBox" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
    </DockPanel>
</Window>
