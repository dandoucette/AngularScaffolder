<Window x:Class="AngularScaffolder.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngularScaffolder"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="0,40,0,0">
            <Button x:Name="ModelButton" Content="Model Scaffolding" Width="120" Height="28" Click="ModelButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="ServiceButton" Content="Service Scaffolding" Width="120" Height="28" Click="ServiceButton_Click" Margin="0,10,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
